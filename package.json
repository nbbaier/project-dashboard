{
  "name": "project-dashboard",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/server/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "scan": "bun run cli/scan.ts scan",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "build:client": "bun build src/client/main.ts --outdir public --target browser",
    "build:css": "bun build src/client/styles.css --outdir public",
    "build": "bun run build:client && bun run build:css",
    "typecheck": "tsgo --noEmit"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "commander": "^14.0.3",
    "drizzle-orm": "^0.45.1",
    "fast-glob": "^3.3.3",
    "hono": "^4.11.9",
    "simple-git": "^3.30.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/bun": "^1.3.8",
    "@typescript/native-preview": "^7.0.0-dev.20260209.1",
    "bun-plugin-tailwind": "^0.1.2",
    "drizzle-kit": "^0.31.9",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "ultracite": "7.1.5"
  }
}
